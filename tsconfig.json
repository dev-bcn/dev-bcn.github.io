{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2015",
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "**/*.svg",
    "**/*.jpg",
    "**/*.css",
    "**/*.json"
  ]
}
